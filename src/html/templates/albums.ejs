<body>
    <%- include('../partials/header'); -%>
    <main class="main">
        <div class="pageTitle-container">
            <p class="pageTitle">ALL ALBUMS</p>
        </div>
        <section class="albumCovers-container">
            <div class="featuredAlbums-menu">
